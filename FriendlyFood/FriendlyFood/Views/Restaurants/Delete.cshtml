@model FriendlyFood.Models.Restaurant

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>


<div class="container-fluid">
    <div class="row justify-content-between">


        <div class="card border-danger mb-3" style="width: 15rem; ">
            <h3 class="card-header card-header-footer"><strong>@Html.DisplayFor(model => model.RestaurantName)</strong></h3>

            <div class="card-body">
                <h5 class="card-title"><strong>@Html.DisplayFor(model => model.Cuisine.CuisineName)</strong></h5>
                <h5 class="card-title"> @Html.DisplayFor(model => model.Address)</h5>
                <h5 class="card-title"> @Html.DisplayFor(model => model.City)</h5>
                <h5 class="card-title">  @Html.DisplayFor(model => model.ZipCode)</h5>
               
                </h5>

                <div class="bottom-buttons">

                    <div class="flex-row align-baseline">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index" class="badge alert-danger">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>